<!DOCTYPE html>
<html>
<head>
  <title>MealOrderingCoordinationSystem</title>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js"></script>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="orderingSystem" ng-controller="mainCtrl">
<div class="container">
  <div class="row orders">
    <div class="col-md-3">
      <div class="row">
        <h3>Orders</h3>
        <ul class="nav nav-tabs" role="tablist">
          <li ng-click="toggleOrdersTabs('active')" ng-class="{'active': ordersTabType == 'active'}"><a href="#">Active</a></li>
          <li ng-click="toggleOrdersTabs('history')" ng-class="{'active': ordersTabType == 'history'}"><a href="#">History</a></li>
        </ul>
      </div>
      <div class="row">
        <div class="list-group orders-list">
          <a href="#" ng-repeat="(orderID, order) in currentOrders" ng-click="changeCurrentOrder(orderID)" class="list-group-item order-item">
            {{ order.restaurant }} - {{ order.status }}
          </a>
        </div>
      </div>
    </div>
    <div class="col-md-8 col-md-offset-1">
      <h3>List of meals</h3>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>User</th>
          <th>Meal</th>
          <th>Price</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="meal in currentOrder.meals">
          <td>{{ meal.user }}</td>
          <td>{{ meal.name }}</td>
          <td>{{ meal.price }}</td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
</html>
